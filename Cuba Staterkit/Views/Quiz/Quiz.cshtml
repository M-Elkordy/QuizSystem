@{
    ViewData["Title"] = "QuizForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


<div class="page-body">

    <div class="container-fluid">
        <div class="page-title" style="margin-top: -29px !important;">
            <div class="row">
                <div class="col-6">
                    <h3>Assesment</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Quiz Form</li>

                    </ol>
                </div>
            </div>
        </div>

    </div>

    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <h5 class="text-align-center"> <img width="60" class="me-2" height="60" src="https://img.icons8.com/external-vitaliy-gorbachev-lineal-color-vitaly-gorbachev/60/external-question-online-learning-vitaliy-gorbachev-lineal-color-vitaly-gorbachev.png" alt="external-question-online-learning-vitaliy-gorbachev-lineal-color-vitaly-gorbachev" />Question Creation</h5>
                        <button class="btn btn-warning addRow rounded-pill pb-0" type="button">Another Version</button>

                    </div>
                    <div class="card-body">
                        <form class="form-wizard" id="regForm" action="#" method="POST">
                            <div class="tab" id="inputs">
                                <div class="mb-3">
                                    <label for="Question"><strong>Question Body :</strong></label>
                                    <div class="input-group">
                                        <input class="form-control" id="Question" type="text" placeholder="Example : What is the Measuring unit of Voltage ?">
                                        <input class="form-control ms-3" id="Answer" type="file" placeholder="Example : Volt">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="Answer"><strong>Answer Body :</strong></label>
                                    <div class="input-group">
                                        <input class="form-control" id="Answer" type="text" placeholder="Example : Volt">
                                        <input class="form-control ms-2" id="Answer" type="file" placeholder="Example : Volt">
                                        <button class="btn btn-success ms-4 an" type="button"><i class="fas fa-plus-circle"></i> </button>
                                    </div>
                                </div>
                                <div class="mb-3" id="ans">
                                </div>

                            </div>


                            <div class="mt-5">
                                <div class="text-end btn-mb">
                                    <button class="btn btn-secondary" id="prevBtn" type="button" onclick="nextPrev(-1)">Previous</button>
                                    <button class="btn btn-primary" id="nextBtn" type="button" onclick="nextPrev(1)">Next</button>
                                </div>
                            </div>
                            <!-- Circles which indicates the steps of the form:-->
                            <div class="text-center" id="bullet"><span class="step"></span></div>
                            <!-- Circles which indicates the steps of the form:-->
                            <!-- Container-fluid Ends-->
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>


@section Script{
    <!-- Plugins JS start-->

    <script src="../assets/js/sidebar-menu.js"></script>
    <script src="../assets/js/slick/slick.min.js"></script>
    <script src="../assets/js/slick/slick.js"></script>
    <script src="../assets/js/header-slick.js"></script>
    <script src="../assets/js/form-wizard/form-wizard.js"></script>
    <!-- Plugins JS Ends-->
    <!-- Theme js-->
    <script src="../assets/js/script.js"></script>
}


<script>
    $(document).ready(function () {
        var newRow, newAns

        //! Add new row
        $(".addRow").click(function () {
            newRow = $(
                "<div class='tab'>" +
                "<div class='mb-3'>" +
                "<label for='name'><strong>Question Body :</strong></label>" +
                "<div class='input-group'>" +
                "<input class='form-control' id='name' type='text' placeholder='Example : What is the Measuring unit of Voltage ?'>" +
                "<input class='form-control ms-3' id='Answer' type='file' placeholder='Example : Volt'>" +
                "</div>" +
                "</div>" +
                "<div class='mb-3'>" +
                "<label for='lname'><strong>Answer Body : </strong></label>" +
                "<div class='input-group' >" +
                "<input class='form-control' id='lname' type='text' placeholder='Volt'>" +
                "<input class='form-control ms-3' id='Answer' type='file' placeholder='Example : Volt'>" +
                "<button class='btn btn-success ms-5 rounded-pill an' type='button'><i class='fas fa-plus-circle'></i></button>" +
                "</div>" +
                "</div>" +
                "<div class='mb-3' id='ans'>" +
                "</div>" +
                "</div>"
            );
            let newBullet = $(
                "<span class='step'></span>"
            );
            document.getElementById("nextBtn").innerHTML = "Next";
            newRow.insertBefore($("#regForm .mt-5"));
            newBullet.insertBefore($("#regForm #bullet .step:last-child"));
        });

        // add new answer
        $(document).on("click", ".an", function () {
            newAns = $(
                "<div class='d-flex align-items-center justify-content-evenly py-4 border-top border-bottom-2'>" +
                "<input type='text' class='form-control text-center text-black' placeholder='Answer'>" +
                "<input class='form-control ms-3' id='Answer' type='file' placeholder='Example : Volt'>" +
                "<button class='btn btn-danger ms-4 removeRow' data-repeater-delete>" +
                "<span class='align-middle'><i class='fas fa-backspace'></i></span>" +
                "</button>" +
                "</div>"
            );
            $(this).closest('.tab').find("#ans").append(newAns);
        });

        //! Remove row
        $("#inputs").on("click", ".removeRow", function () {
            $(this).closest(".d-flex").remove();
        });
    });

</script>









